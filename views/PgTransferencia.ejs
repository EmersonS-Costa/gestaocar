<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transferência</title>
  <link rel="stylesheet" href="./css/style.css">
  <script src="./js/js.js"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-
    QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-
    I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-
    0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

<body>
  <div class="container-fluid mt-4" id="contatos">

    <div class="col-12 text-center my-2">
      <h2 class="display-7 ">Transferência</h2>
    </div>

    <div class="row justify-content-center mb-5 p-3">
      <div class="col-sm-12 col-md-12 col-lg-12 ">
        <form action="/PgTransferencia" method="POST">
          <div class="form-row">

            <div class="row">

              <div class="form-group col-sm-3 mb-3">
                <label for="Placa">Placa</label>
                <input type="text" class="form-control" id="Placa" name="Placa" placeholder="Placa">
              </div>

              <div class="form-group col-sm-5 mb-3">
                <p>
                Modelo
                </p>
              </div>

              <div class="form-group col-sm-4 mb-3">
                <label for="CPFTransf">CPF</label>
                <input type="text" class="form-control" id="CPFTransf" name="CPFTransf" placeholder="CPF">
              </div>


            </div>
          </div>

          <div class="form-row mt-4">
            <div class="col-sm-12">
              <button type="submit" class="btn btn-primary">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-envelope-fill" fill="currentColor"
                  xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 
                  4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-
                  6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z" />
                </svg>
                Transferir
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div id="dgvPostos" class="dgvPostos">

      <div id="dgvTitulos" class="dgvTitulos">
        <div class="M1">Status</div>
        <div class="M1">Placa</div>
        <div class="M2">Modelo</div>
        <div class="M3">Nome</div>
        <div class="M3">Aprovar</div>
      </div>

      <div id="dgvDados" class="dgvDados">
        <div class="dgvLinhas">

          <div class="M1">         
            <% transfer.forEach(function(item) { %>
              <li><%= item.StatusTransferencia %></li>
              <% }); %>
          </div>

          <div class="M1">
            <% transfer.forEach(function(item) { %>
              <li><%= item.Placa %></li>
              <% }); %>
          </div>


          <div class="M2">
            <% transfer.forEach(function(item) { %>
              <li><%= item.Modelo %></li>
              <% }); %>
          </div>

          <div class="M3">
            <% transfer.forEach(function(item) { %>
              <li><%= item.Nome %></li>
              <% }); %>
          </div>

          <div class="M1">
            <% transfer.forEach(function(item) { %>              
            <% if (item.CPFTransferencia === cpf) { %>
              
            <li>
              <form action="/PgTransferencia" method="POST">
                <input type="hidden" name="aprovar" value="aprovar">
                <button type="submit" class="btn btn-primary">Aprovar</button>
              </form>
            </li>
            <% } %>
            <% }); %>
          </div>

        </div>
      </div>
    </div>
  </div>



</body>

</html>