<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Histórico</title>
  <link rel="stylesheet" href="./css/style.css">
  <script src="./js/js.js"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-
    QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-
    I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-
    0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

<body>

  <div class="container-fluid mt-4" id="contatos">
    <div class="col-12 text-center my-2">
      <h2 class="display-7 ">Combustivel</h2>
    </div>
    <div id="dgvPostos" class="dgvPostos">
      <div id="dgvTitulos" class="dgvTitulos">
        <div class="Ch1">Data</div>
        <div class="Ch2">Posto</div>
        <div class="Ch3">Endereço</div>
        <div class="Ch4">Vl Litro</div>
        <div class="Ch5">Vl Abstecido</div>
        <div class="Ch6">Litro</div>
        <div class="Ch7">Status</div>
      </div>

      <div id="dgvDados" class="dgvDados">
        <div class="dgvLinhas">

          <div class="Ch1">
            <% abastecimento.forEach(function(item) { %>
              <li>
                <%= new Date(item.DataAbastecimento).toLocaleDateString('pt-BR') %>
              </li>
              <% }); %>
          </div>
          <div class="Ch2">
            <% abastecimento.forEach(function(item) { %>
              <li>
                <%= item.Posto %>
              </li>
              <% }); %>
          </div>

          <div class="Ch3">
            <% abastecimento.forEach(function(item) { %>
              <li>
                <%= item.Endereco %>
              </li>
              <% }); %>
          </div>

          <div class="Ch4">
            <% abastecimento.forEach(function(item) { %>
              <li>
                <%= item.ValorLitro %>
              </li>
              <% }); %>
          </div>

          <div class="Ch5">
            <% abastecimento.forEach(function(item) { %>
              <li>
                <%= item.ValorAbastecido %>
              </li>
              <% }); %>
          </div>

          <div class="Ch6">
            <% abastecimento.forEach(function(item) { %>
              <li>
                <%= item.LitroAbastecido %>
              </li>
              <% }); %>
          </div>

          <div class="Ch7">
            <% abastecimento.forEach(function(item) { %>
              <li> <%= item.Completo %> </li>
              <% }); %>
          </div>

        </div>
      </div>
    </div>
  



  <div class="col-12 text-center my-2">
    <h2 class="display-7 ">Manutenção</h2>
  </div>


  <div id="dgvPostos" class="dgvPostos">

    <div id="dgvTitulos" class="dgvTitulos">
      <div class="M1">Data Manutenção</div>
      <div class="M2">Item</div>
      <div class="M3">Descrição</div>
      <div class="M4">Km Atual</div>
      <div class="M5">Manutenção</div>
      <div class="M6">Km Restante</div>
    </div>

    <div id="dgvDados" class="dgvDados">
      <div class="dgvLinhas">
                  
        <div class="M1">
          <% Hmanutencao.forEach(function(item) { %>
            <li><%= new Date(item.DataManutencao).toLocaleDateString('pt-BR') %></li>
            <% }); %>
        </div>
        <div class="M2">
          <% Hmanutencao.forEach(function(item) { %>
            <li><%= item.Item %></li>
            <% }); %>
        </div>
        <div class="M3">
          <% Hmanutencao.forEach(function(item) { %>
            <li><%= item.Descricao %></li>
            <% }); %>
        </div>

        <div class="M5">
          <% Hmanutencao.forEach(function(item) { %>
            <li><%= item.KmAtual %></li>
            <% }); %>
        </div>

        <div class="M4">
          <% Hmanutencao.forEach(function(item) { %>
            <li><%= item.KmManutenção %></li>
            <% }); %>
        </div>

        <div class="M6">
          <% Hmanutencao.forEach(function(item) { %>
            <li><%= item.Km_Restante %></li>
            <% }); %>
        </div>     
      </div>
    </div>
  </div>
</div>

</body>

</html>